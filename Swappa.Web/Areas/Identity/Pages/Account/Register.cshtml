@page
@using Swappa.ApplicationCore.Utilities
@model Swappa.Web.Areas.Identity.Pages.Account.RegisterModel
@{
    Layout = "_RegisterLayout";
    ViewData["Title"] = "Register";
}
@if (User.IsInRole(WebsiteRole.Customer))
{
  
}
<div class="row justify-content-center">
      <div class="col-lg-6 col-md-10 col-lg-offset-3 col-md-offset-1">
        <form id="formLogin">
          <div class="div_id_username" class="mb-3">
            <label class="form-label requiredField">Email*</label>
            <input type="email" class="textinput textInput form-control" id="username" />
          </div>
          <div class="div_id_username" class="mb-3">
            <label class="form-label requiredField">Password*</label>
            <input id="password" type="text" class="textinput textInput form-control" />
            <div class="div_id_username" class="mb-3">
              <label class="form-label requiredField">RePassword*</label>
              <input id="repassword" type="text" class="textinput textInput form-control" />
            </div>
            <div class="mb-3 mt-3">
              <button onclick="Register()" class="btn btn-primary btn-block btn-lg tm-bg-gray">
                Register
              </button>
            </div>
        </form>
        <div class="mb-3 mt-3">
          <button onclick="login()" class="btn btn-default btn-block btn-lg cl-black btn-google hover-but">
            <img src="https://static.swappa.com/static/icons/social/login_google.png" alt="">
            Log In with Google
          </button>
        </div>
        <div class="row" style="margin: 15px 0;">
          <div class="col-xs-3 col-md-4">
            <hr>
          </div>
          <div class="col-xs-6 col-md-4 text-center">
            <span style="color: #333333; font-size: 14px;">Or Log in with</span>
          </div>
          <div class="col-xs-3 col-md-4">
            <hr>
          </div>
        </div>
        <div class="mb-3 mt-3 ">
          <button onclick="login()" class="btn btn-default btn-block btn-lg  btn-google cl-pp">
            <i class='bx bxl-paypal cl-pp'></i>
            Log In with PayPal
          </button>
        </div>
        <hr style="margin: 20px 0;">

      </div>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
